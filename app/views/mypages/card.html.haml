= render "shared/header"
.content-area
  .content-area__left
    =render "mypages/side-bar"
  .content-area__right
    %h2.method_of_payment 支払い方法
    .card-content-inner
      .card-list__title
        クレジットカード一覧
        - if @card.present?
          .card-company-logos
            = link_to image_tag("//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3296506464", width: '49', alt: "visa-logo") 
            .cardlist__title__container  
              .card-user-info-text
              = "**** **** ****"+ "#{@default_card_information.last4}"
              %br
                - exp_month = @default_card_information.exp_month.to_s
                - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                = exp_month + " / " + exp_year
              .card-remove-btn
                = link_to delete_card2s_path, method: :delete do
                  %span 削除する
                
        - else
          .add-card
            .add-card__link
              .add-card__container
                = link_to " " do
                  = fa_icon 'credit-card'
                  %span クレジットカードを登録する
    .settings-not-regist
      =link_to "支払い方法について ＞", "https://www.mercari.com/jp/help_center/category/6/"
      

=render "shared/sell-btn"
=render "shared/footer"