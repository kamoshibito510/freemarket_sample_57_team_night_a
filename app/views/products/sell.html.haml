.sell-container
  = render "users/login-header"

  .sell-main
    %section.single-container 
      .sell-main__inner
        %h2 商品の情報を入力
        %form.sell-form
          .upload-box
            %h3 
              出品画像
              %span 必須
            %p 最大10枚までアップロードできます
            .drop-box
              .drop-box__case
                %input{type:"file"}
                %p 
                  ドラッグアンドドロップ
                  %br
                  またはクリックしてファイルをアップロード
          
          .sell-content
            .form-group
              %h3 
                商品名
                %span 必須
              %input{type:"text",placeholder:"商品名（必須４０文字まで）"}
            .form-group-2
              %h3 
                商品の説明
                %span 必須
              %textarea{type:"text",placeholder:"商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"}

          .sell-content.clearfix
            %h3.sell-head
              商品の詳細
            .sell-form-box
              .form-group
              %h3 
                カテゴリー
                %span 必須
              -# =f.collection_select
              .form-group-2
              %h3 
                商品の状態
                %span 必須
              -# =f.collection_select
              
          .sell-content.clearfix
            %h3.sell-head
              配送について
            = link_to "?","https://www.mercari.com/jp/help_center/article/64/",class:"icon"

            .sell-form-box
              .form-group
              %h3 
                配送料の負担
                %span 必須
              -# =f.collection_select
              .form-group-2
              %h3 
                発送元の地域
                %span 必須
              -# =f.collection_select
              .form-group-2
              %h3 
                発送までの日数
                %span 必須
              -# =f.collection_select


          .sell-content.clearfix
            %h3.sell-head
              販売価格(300〜9,999,999)
            = link_to "?","https://www.mercari.com/jp/help_center/article/64/",class:"icon"
            
            .sell-form-box
              %ul
                %li.price-box
                  .clearfix
                    %label
                      価格
                      %span 必須
                    .price-right
                      ¥
                      .price-right__input
                        %input{type:"text",placeholder:"例）300",class:"input-text"}
                %li.clearfix
                  .text-left
                    販売手数料 (10%)
                  .text-right
                    -
                %li.clearfix
                  .text-left__profit
                    販売利益
                  .text-right__profit
                    -

          .sell-content
            .text-box
              %p
                =link_to "禁止されている出品",class:"link"
                ,
                =link_to "行為",class:"link"
                を必ずご確認ください。
              %p
                またブランド品でシリアルナンバー等がある場合はご記載ください。
                =link_to "偽ブランドの販売",class:"link"
                は犯罪であり処罰される可能性があります。
              %p
                また、出品をもちまして
                =link_to "加盟店規約",class:"link"
                に同意したことになります。
            
            %button{type:"submit",class:"btn-red"}
              出品する
            .btn-gray
              =link_to "もどる",root_path,class:"btn-back"



  = render "users/login-footer"