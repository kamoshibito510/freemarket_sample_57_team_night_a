.card-container
  = render "users/login-header"

  .card-main
    .card-box
      %h3.card-box__head 支払い方法
      %section.card-number-box
        %p 
          カード番号
          %span 必須
        %input{type:"text",placeholder:"半角数字のみ"}
        %ul
          %li 
            =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2482339763", size: "49x20",alt:"visa"
          %li 
            =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2482339763", size: "34x20",alt:"master-card"
          %li 
            =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2482339763", size: "30x20",alt:"saison-card"
          %li 
            =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2482339763", size: "32x20",alt:"jcb"
          %li 
            =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2482339763", size: "21x20",alt:"american_express"
          %li 
            =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2482339763", size: "32x20",alt:"dinersclub"
          %li 
            =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2482339763", size: "32x20",alt:"discover"

      %section.deadline-box
        %p
          有効期限
          %span 必須
        .select-box
          .select-month
            %select{name:"month"} 
              %option{value:"01"} 01
              %option{value:"02"} 02
              %option{value:"03"} 03
              %option{value:"04"} 04
              %option{value:"05"} 05
              %option{value:"06"} 06
              %option{value:"07"} 07
              %option{value:"08"} 08
              %option{value:"09"} 09
              %option{value:"10"} 10
              %option{value:"11"} 11
              %option{value:"12"} 12
            %span 月
          
          .select-year
            %select{name:"year"} 
              %option{value:"2019"} 2019
              %option{value:"2020"} 2020
              %option{value:"2021"} 2021
              %option{value:"2022"} 2022
              %option{value:"2023"} 2023
              %option{value:"2024"} 2024
              %option{value:"2025"} 2025
              %option{value:"2026"} 2026
              %option{value:"2027"} 2027
              %option{value:"2028"} 2028
              %option{value:"2029"} 2029
            %span 年

      %section.security-box
        %p 
          セキュリティーコード
          %span 必須
        %input{type:"text",placeholder:"カード裏面４桁、もしくは３桁の番号"}
        .link-right
          %span.question ?
          =link_to "カード裏面の番号とは？",class:""

      %section.go-to-next-btn
        %button{type:"submit"} 次へ進む
          
  = render "users/login-footer"