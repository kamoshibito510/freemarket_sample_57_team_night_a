      .login-panel__no-account
        %p アカウントをお持ちでない方はこちら
        =link_to "新規会員登録" 

      .login-panel__form
        %ul.login-panel__form__button
          %li.login-panel__form__button__facebook
            =link_to "#" do
              Facebookでログイン
              %i
                = fa_icon "facebook-square"
          %li.login-panel__form__button__google
            =link_to "#" do
              .login-panel__form__button__google__text
                Googleでログイン
              .login-panel__form__button__google__icon
              
      .login-panel__form-bottom








  =render "users/login-footer"