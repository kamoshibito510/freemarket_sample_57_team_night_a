.adress-main
  .adress-main
    = form_with model: @user, url: signup_index_path, method: :post, local: true do |f|
      .adress-main__box
        %h2.adress-main__box__text
          住所入力
        .adress-inner
          .adress-inner__contents
            .form-group
              = f.label :"お名前", class: 'form-group__name'
              %span.form-group__hissu
                必須
              %span
                = f.text_field :family_name, autocomplete: "family_name_kanji", placeholder: "例) 山田", class: "form-group__input-box"
                = f.text_field :first_name, autocomplete: "first_name_kanji", placeholder: "例）彩", class: "form-group__input-box"
            .form-group-2
              -# = f.label :"お名前カナ", class:"form-group__name"
              %span.form-group__hissu
                必須
              %span
                = f.text_field :family_name_kana, autocomplete: "family_name_kana", placeholder: "例）ヤマダ", class: "form-group__input-box"
                = f.text_field :first_name_kana, autocomplete: "family_name_kana", placeholder: "例）アヤ", class: "form-group__input-box"
            .form-group-2
              = f.label :"郵便番号", class:"form-group__name"
              %span.form-group__hissu
                必須
              %span
                = f.text_field :post_number, placeholder: "例）123-4567", class: "form-group__input-box"
            .form-group-2
              = f.label :"都道府県", class:"form-group__name"
              %span.form-group__hissu
                必須
              = fa_icon"angle-down " , class:"angle-icon fa-lg"
              %span
                = f.collection_select :prefecture, Prefecture.all, :id, :name,{prompt: "--"}, {class:"form-group-2__select"}
            .form-group-2
              = f.label :"市区町村", class:"form-group__name"
              %span.form-group__hissu
                必須
              %span
                = f.text_field :city, placeholder: "例) 東海市名和町", class: "form-group__input-box"
            .form-group-2
              = f.label :"番地", class:"form-group__name"
              %span.form-group__hissu
                必須
              %span
                = f.text_field :address, placeholder: "例) 青山1-1-1", class: "form-group__input-box"
            .form-group-2
              = f.label :"建物名", class:"form-group__name"
              %span.form-group__arbitrarily
                任意
              %span
                = f.text_field :building, autocomplete: "email", placeholder: "例）柳ビル103", class: "form-group__input-box"
            .form-group-2
              = f.label :"電話", class:"form-group__name"
              %span.form-group__arbitrarily
                任意
              %span
                = f.text_field :phone_number, autocomplete: "current-password", placeholder: "例）09012345678", class: "form-group__input-box"
            .form-group-btn-box
              %span
                = f.submit "次へ進む", class: 'btn-next-box'
  =render "users/login-footer"