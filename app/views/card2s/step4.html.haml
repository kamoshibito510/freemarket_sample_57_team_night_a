    .credit-card-resistration
      .credit-card-resistration__title
        支払い方法
      .credit-card-resistration__box
        = form_with model:@card, url: registration_step4_card2s_path, method: :post, local: true ,id: "charge_form" do |f|
          .card-information-box
            .card-information-box__card-number
              .label-require-icon
                %label.card-information-box__label
                  カード番号
                  %span.card-information-box__require-icon2
                    必須
                = f.text_field :number, class: "card-information-box__input", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
                %ul
                  %li 
                    =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2482339763", size: "49x20",alt:"visa"
                  %li 
                    =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2482339763", size: "34x20",alt:"master-card"
                  %li 
                    =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2482339763", size: "30x20",alt:"saison-card"
                  %li 
                    =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2482339763", size: "32x20",alt:"jcb"
                  %li 
                    =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2482339763", size: "21x20",alt:"american_express"
                  %li 
                    =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2482339763", size: "32x20",alt:"dinersclub"
                  %li 
                    =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2482339763", size: "32x20",alt:"discover"
            .card-information-box__expiration
              .label-require-icon
                %label.card-information-box__label
                  有効期限
                  %span.card-information-box__require-icon2
                    必須
              = f.select :exp_month, [["--",""],["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'card-information-box__select '
              %span.card-information-box__select__text 月
              = f.select :exp_year, [["--",""],["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'card-information-box__select'
              %span.card-information-box__select__text 年
            .card-information-box__security
              .label-require-icon
                %label.card-information-box__label
                  セキュリティコード
                  %span.card-information-box__require-icon2
                    必須
              = f.text_field :cvc, class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc",class: "card-information-box__input"
              #card_token
              = f.submit "追加する", id: "token_submit", class: "card-information-box__submit"
              .skip-btn
                = link_to "カード登録をスキップする", root_path
              
                
  =render "users/login-footer"